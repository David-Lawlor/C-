@using Vidly.Models

@* @model Vidly.Models.Movie *@

@model Vidly.Views.ViewModels.RandomMovieViewModel

@{
        ViewBag.Title = "Random";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

@* This is how to view the data sent in via the view method*@
@*<h2>@Model.Name</h2>*@

@* Access the data sent in via ViewData method *@
@* <h2> @( ((Movie) ViewData["Movie"]).Name ) </h2> *@

@* Accessing data via the viewbag *@
@* @ViewBag.Movie *@

@{
    var className = Model.Customers.Count > 0 ? "popular" : null;
}

<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <p>No one has rented this movie before</p>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}

